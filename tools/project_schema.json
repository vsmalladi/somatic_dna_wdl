{
    "$schema": "http://json-schema.org/draft/2019-09/schema#",

    "type": "object",

    "definitions": {
        "fastqPair": {
            "type": "object",
            "properties": {
                "fastqR1": { "type": "string" },
                "fastqR2": { "type": "string" },
                "readGroupId": { "type": "string" },
                "readGroupPlatformUnit": {"type": "string"},
                "clientSampleId": {"type": "string"},
		"limsLibraryName": {"type": "string"}
            },
            "required": ["fastqR1", "fastqR2", "readGroupId", "readGroupPlatformUnit", "clientSampleId"]
        },
        "bam" : {
            "type": "object",
            "properties": {
                "bam": { "type": "string" },
                "bamIndex": { "type": "string" }
            },
            "required": ["bam"]
        },
        "sampleInfo": {
            "type": "object",
            "properties": {
                "sampleAnalysisId" : { "type": "string" },
                "expectedCoverage": { "type": "number" },
                "listOfFastqPairs" : { "type": "array",
                    "items": { "$ref": "#/definitions/fastqPair" }
                }
            },
            "required": ["sampleAnalysisId"]
        },
        "pairInfo": {
            "type": "object",
            "properties": {
                "pairId": {"type" : "string" },
                "tumorFinalBam": {"$ref": "#/definitions/bam"},
                "normalFinalBam": {"$ref": "#/definitions/bam"},
                "tumorId": {"type" : "string" },
                "normalId": {"type" : "string" }
            },
            "required": ["pairId", "tumorId", "normalId"]
        }
    },

    "properties": {
        "pairIds" : {"type": "array",
            "items": {"type": "string"}},
        "sampleIds" : {"type": "array",
            "items": {"type": "string"}},
        "normalIds" : {"type": "array",
            "items": {"type": "string"}},
        "tumorIds" : {"type": "array",
            "items": {"type": "string"}},
        "commit": { "type": "string"},
        "tag": { "type": "string"},
        "uniq_tag": { "type": "string"},
        "branch": { "type": "string"},
        "project": { "type": "string"},
        "pairInfos": { "type": "array",
            "items": { "$ref": "#/definitions/pairInfo" }

        },
        "sampleInfos": { "type": "array",
            "items": { "$ref": "#/definitions/sampleInfo" }

        },
        "normalSampleInfos": { "type": "array",
            "items": { "$ref": "#/definitions/sampleInfo" }

        },
        "library": { "type": "string",
            "enum": ["WGS", "Exome"]
        },
        "genome": { "type": "string",
            "enum": ["Human_GRCh38_full_analysis_set_plus_decoy_hla",
                "Human_GRCh38_tcga"]
        },
        "intervalList": { "type": "string"}
    },

    "required": []
}
